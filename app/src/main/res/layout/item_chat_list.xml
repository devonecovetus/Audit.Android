<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:elevation="2dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/mImgChatUser"
            android:src="@mipmap/ic_placeholder_user"
            android:layout_width="120dp"
            android:layout_height="120dp" />


        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:id="@+id/mTextUserName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mImgChatUser"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Akhilesh Pathak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ABS_CUSTOM_VIEW.TextViewRegular
            android:id="@+id/mTextUserLastMsg"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/mTextUserName"
            android:layout_toRightOf="@+id/mImgChatUser"
            android:textSize="20dp"
            android:textColor="@color/colorLightBlack"
            android:text="In addition to acting, he has also worked as a producer and screenwriter. Apart from his film career, he is also a philanthropist"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ABS_CUSTOM_VIEW.TextViewRegular
            android:id="@+id/mTextUserLastMsgDate"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/mTextUserLastMsg"
            android:layout_toRightOf="@+id/mImgChatUser"
            android:textSize="15dp"
            android:textColor="@color/colorLightBlack"
            android:text="Dec 31, 2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</RelativeLayout>