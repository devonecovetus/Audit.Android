<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/mMAinLAyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mImageUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_circle"
            android:scaleType="centerInside" />


        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:id="@+id/mTextMsgBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mImageUser"
            android:background="@mipmap/ic_chat_box_receive"
            android:padding="10dp"
            android:text="ghj"
            android:textColor="#fff"
            android:textSize="22dp" />

        <ImageView
          android:id="@+id/mImgBody"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/mImageUser"
            android:background="@mipmap/ic_chat_box_receive"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/mImgPlay"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/mImageUser"
            android:padding="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/rounded_downloaded"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/mImageUser"
            android:background="@android:color/transparent"
            android:indeterminateDrawable="@drawable/progressbar_custom"
            android:padding="80dp"
            android:visibility="gone" />

    </RelativeLayout>

    <ABS_CUSTOM_VIEW.TextViewRegular
        android:id="@+id/mTextMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mMAinLAyout"
        android:layout_marginLeft="75dp"
        android:text="11:40 AM"
        android:textColor="#000"
        android:textSize="15sp" />
</RelativeLayout>