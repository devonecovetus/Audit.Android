<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:elevation="2dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/mLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/mImageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_actionbar_back" />





    </RelativeLayout>


    <ABS_CUSTOM_VIEW.TextViewBold
        android:id="@+id/mTxtTitle"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/mLayoutTop"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Option Below"/>


    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/mTxtTitle"
        android:background="@drawable/white_border_shap"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ABS_CUSTOM_VIEW.TextViewBold
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on help icon to view details about country standard and langauge"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:padding="40dp"
        android:background="@drawable/rounded_corner_white_shap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ABS_CUSTOM_VIEW.TextViewBold
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#949ea8"
                android:text="Country Standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:src="@mipmap/ic_info_icon" />
        </RelativeLayout>

        <Spinner
            android:id="@+id/mSpinnerCountryStandard"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ABS_CUSTOM_VIEW.TextViewBold
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#949ea8"
                android:text="Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:src="@mipmap/ic_info_icon" />
        </RelativeLayout>

        <Spinner
            android:id="@+id/mSpinnerLanguageStandard"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>




    </LinearLayout>


    <RelativeLayout
        android:layout_marginBottom="160dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/mLayoutDone"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/white_border_round_corner_shap">

        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:id="@+id/mTextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>




</RelativeLayout>