<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border_ractangel_shap"
    android:orientation="vertical"
    android:padding="20dp">

    <ABS_CUSTOM_VIEW.TextViewSemiBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mText_add_a_sub_folder"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ABS_CUSTOM_VIEW.EditTextSemiBold
            android:id="@+id/mEditFolderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/black_border_round_corner_shap"
            android:gravity="top"
            android:hint="@string/mText_folder_name"
            android:lines="5"
            android:padding="10dp"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mImgCountUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_sub_folder_count_up" />

           <ABS_CUSTOM_VIEW.TextViewSemiBold
               android:id="@+id/mTxtCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@color/colorGrey"
               android:paddingBottom="20dp"
               android:paddingLeft="60dp"
               android:paddingRight="60dp"
               android:paddingTop="20dp"
               android:text="20"
               android:textColor="@color/black"
               android:textSize="20dp"/>

            <ImageView
                android:id="@+id/mImgCountDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_sub_folder_count_down" />


        </LinearLayout>



    </LinearLayout>



    <ABS_CUSTOM_VIEW.TextViewBold
        android:id="@+id/mTxtAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_signin_button"
        android:paddingBottom="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="15dp"
        android:text="@string/mText_add"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>



</LinearLayout>
